# ------------------------------------------------------------ 
# --------------------------- PATH --------------------------- 
# ------------------------------------------------------------ 

# set PATH so it includes user's private bin
PATH="$HOME/.local/bin:$PATH"

# set PATH so it includes user's custom scripts
PATH="$HOME/scripts:$PATH"


# ------------------------------------------------------------ 
# ------------------ ENVIRONMENT VARIABLES ------------------- 
# ------------------------------------------------------------ 
export PATH;
export EDITOR="vim";


# ------------------------------------------------------------
# ------------------------- SETTINGS -------------------------
# ------------------------------------------------------------
if [ "$BASH" ]; then
    source ~/.bashrc
fi
